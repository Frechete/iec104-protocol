{
  "name": "iec104-protocol",
  "version": "1.1.0",
  "description": "104 protocol common toolkit",
  "author": "wukz",
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.js",
  "homepage": "https://github.com/wukz959/iec104-protocol.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/wukz959/iec104-protocol.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "npx rollup -c",
    "tsc": "npx tsc --outDir dist -p tsconfig.json",
    "lint": "npx eslint . --ext .ts",
    "c8": "npx c8 --check-coverage npm run test",
    "ts": "node --es-module-specifier-resolution=node --loader ts-node/esm",
    "test": "npx mocha -n loader=ts-node/esm -n experimental-specifier-resolution=node --config .mocharc.json \"src/**/*.test.ts\" --",
    "test:grep": "npm run test -- --grep",
    "install:hook": "npx husky install"
  },
  "engines": {
    "node": ">=16.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "c8": "^7.13.0",
    "eslint": "^8.32.0",
    "glob": "^10.2.5",
    "husky": "^8.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "power-assert": "^1.6.1",
    "rollup": "^3.22.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        50
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "refactor"
        ]
      ],
      "type-case": [
        2,
        "always",
        "lowerCase"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "c8": {
    "src": [
      "src"
    ],
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  }
}
